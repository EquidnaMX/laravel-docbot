{
  "version": "0.2.0",
  "name": "equidna/laravel-docbot",
  "description": "Laravel package that generates API documentation and lists custom Artisan commands.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Gabriel Ruelas",
      "email": "gruelas@gruelas.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "illuminate/support": "^12.0",
    "illuminate/filesystem": "^12.0",
    "illuminate/routing": "^12.0",
    "illuminate/console": "^12.0",
    "illuminate/contracts": "^12.0"
  },
  "autoload": {
    "psr-4": {
      "Equidna\\LaravelDocbot\\": "src/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Equidna\\LaravelDocbot\\LaravelDocbotServiceProvider"
      ]
    }
  },
  "require-dev": {
    "larastan/larastan": "^3.8",
    "squizlabs/php_codesniffer": "^4.0",
    "phpunit/phpunit": "11.2"
  },
  "scripts": {
    "analyse": "vendor\\bin\\phpstan analyse -c phpstan.neon --memory-limit=2G",
    "lint": "vendor\\bin\\phpcs --standard=ruleset.xml src tests"
  }
}
